@model K22CNT2_PhanLacViet_DATN.Areas.NguoiDung.Models.TrangChuViewModel

@{
    Layout = "~/Areas/NguoiDung/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Trang chủ đọc truyện";
}
<link href="~/NguoiDung/css/TrangChu.css" rel="stylesheet" />

<div class="wrap">
    <main>
        <section class="panel">
            <div class="section-title">
                <h3 style="margin:0">Truyện mới cập nhật</h3>
            </div>

            @foreach (var t in Model.DanhSachTruyen.Take(5))
            {
                <div class="list-item">
                    @* Click vào ảnh cũng ra chi tiết *@
                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })" class="thumb"></a>

                    <div style="flex:1">
                        <div style="display:flex; justify-content:space-between; align-items:start">
                            <div>
                                <div class="title">
                                    @* Link tên truyện *@
                                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })" style="text-decoration:none; color:inherit; font-weight:bold">
                                        @t.TenTruyen
                                    </a>
                                </div>
                                <div class="desc">@t.MoTa</div>
                            </div>
                            <div class="story-time">
                                <i class="fa-regular fa-clock"></i>
                                <span>@TimeHelper.GetTimeAgo(t.NgayCapNhat)</span>
                            </div>
                        </div>

                        <div style="margin-top:8px; display:flex; gap:8px">
                            @* Nút đọc ngay dẫn đến trang chi tiết *@
                            <a class="btn" href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })">Đọc ngay</a>
                            <button class="btn-save" data-id="@t.MaTruyen" style="padding:8px;border-radius:8px;border:1px solid #ddd;background:#fff;cursor:pointer">
                                Lưu
                            </button>
                        </div>
                    </div>
                </div>
            }
        </section>

        <section class="panel" style="margin-top:16px">
            <div class="section-title">
                <h3 style="margin:0">Truyện dịch</h3>
            </div>

            @foreach (var t in Model.DanhSachTruyen.Where(x => x.LoaiTruyen == "Dịch").Take(5))
            {
                <div class="list-item">
                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })" class="thumb"></a>
                    <div style="flex:1">
                        <div style="display:flex; justify-content:space-between; align-items:start">
                            <div>
                                <div class="title">
                                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })" style="text-decoration:none; color:inherit; font-weight:bold">
                                        @t.TenTruyen
                                    </a>
                                </div>
                                <div class="desc">@t.MoTa</div>
                            </div>
                            <div class="story-time">
                                <i class="fa-regular fa-clock"></i>
                                <span>@TimeHelper.GetTimeAgo(t.NgayCapNhat)</span>
                            </div>
                        </div>
                        <div style="margin-top:8px; display:flex; gap:8px">
                            <a class="btn" href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })">Đọc ngay</a>
                            <button style="padding:8px;border-radius:8px;border:1px solid #ddd;background:#fff;cursor:pointer">Lưu</button>
                        </div>
                    </div>
                </div>
            }
        </section>

        <section class="panel" style="margin-top:16px">
            <div class="section-title">
                <h3 style="margin:0">AI dịch — đề cử</h3>
            </div>

            @foreach (var t in Model.DanhSachTruyen.Where(x => x.LoaiTruyen == "AI dịch").Take(5))
            {
                <div class="list-item">
                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })" class="thumb"></a>
                    <div style="flex:1">
                        <div style="display:flex; justify-content:space-between; align-items:start">
                            <div>
                                <div class="title">
                                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })" style="text-decoration:none; color:inherit; font-weight:bold">@t.TenTruyen</a>
                                </div>
                                <div class="desc">@t.MoTa</div>
                            </div>
                            <div class="story-time">
                                <i class="fa-regular fa-clock"></i>
                                <span>@TimeHelper.GetTimeAgo(t.NgayCapNhat)</span>
                            </div>
                        </div>
                        <div style="margin-top:8px; display:flex; gap:8px">
                            <a class="btn" href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })">Đọc ngay</a>
                            <button style="padding:8px;border-radius:8px;border:1px solid #ddd;background:#fff;cursor:pointer">Lưu</button>
                        </div>
                    </div>
                </div>
            }
        </section>

        <section class="panel" style="margin-top:16px">
            <div class="section-title">
                <h3 style="margin:0">Sáng tác mới</h3>
            </div>

            @foreach (var t in Model.DanhSachTruyen.Where(x => x.LoaiTruyen == "Sáng tác").Take(5))
            {
                <div class="list-item">
                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })" class="thumb"></a>
                    <div style="flex:1">
                        <div style="display:flex; justify-content:space-between; align-items:start">
                            <div>
                                <div class="title">
                                    <a href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })" style="text-decoration:none; color:inherit; font-weight:bold">@t.TenTruyen</a>
                                </div>
                                <div class="desc">@t.MoTa</div>
                            </div>
                            <div class="story-time">
                                <i class="fa-regular fa-clock"></i>
                                <span style="text-decoration-color:grey">@TimeHelper.GetTimeAgo(t.NgayCapNhat)</span>
                            </div>
                        </div>
                        <div style="margin-top:8px; display:flex; gap:8px">
                            <a class="btn" href="@Url.Action("ChiTiet", "Truyen", new { id = t.MaTruyen })">Đọc ngay</a>
                            <button style="padding:8px;border-radius:8px;border:1px solid #ddd;background:#fff;cursor:pointer">Lưu</button>
                        </div>
                    </div>
                </div>
            }
        </section>
    </main>

    <aside class="right-col">
        <div class="panel side-tabs-container">
            <div class="side-tabs-header">
                <button class="tab-btn active" data-target="history">Lịch sử</button>
                <button class="tab-btn" data-target="saved">Đã lưu</button>
            </div>

            <div class="tab-content active" id="history">
                <div class="mini-list">
                    @if (Model.LichSu != null && Model.LichSu.Any())
                    {
                        foreach (var item in Model.LichSu)
                        {
                            <div class="mini-item">
                                <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.MaTruyen })" class="mini-thumb">
                                </a>
                                <div class="mini-info">
                                    <div class="mini-title">
                                        <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.MaTruyen })" style="text-decoration:none; color:inherit; font-weight:bold;">
                                            @item.TenTruyen
                                        </a>
                                    </div>
                                    <div class="mini-chapter" style="color: #555; font-size: 0.9em;">
                                        Đã đọc: Chương @item.ThuTuChuong
                                    </div>
                                    @if (item.NgayDoc.HasValue)
                                    {
                                        <div class="mini-time" style="font-size: 0.8em; color: #999;">
                                            <i class="far fa-clock"></i> @item.NgayDoc.Value.ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="empty-msg">Chưa có lịch sử đọc</p>
                    }
                </div>
            </div>

            <div class="tab-content" id="saved">
                <div class="mini-list">
                    @if (Model.DaLuu != null && Model.DaLuu.Any())
                    {
                        foreach (var item in Model.DaLuu)
                        {
                            <div class="mini-item">
                                <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.MaTruyen })" class="mini-thumb"></a>
                                <div class="mini-info">
                                    <div class="mini-title">
                                        <a href="@Url.Action("ChiTiet", "Truyen", new { id = item.MaTruyen })" style="text-decoration:none; color:inherit;">@item.TenTruyen</a>
                                    </div>
                                    <div class="mini-chapter">@item.TacGia</div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="empty-msg">Chưa có truyện đã lưu</p>
                    }
                </div>
            </div>
        </div>
    </aside>
</div>
@section Scripts {
    <script src="~/NguoiDung/js/trangchu.js"></script>
}