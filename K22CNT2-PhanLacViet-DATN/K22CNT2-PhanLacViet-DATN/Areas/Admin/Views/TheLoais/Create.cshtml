@model K22CNT2_PhanLacViet_DATN.Models.TheLoai

@{
    ViewData["Title"] = "Thêm thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-sm p-4 bg-white rounded" style="max-width: 600px;">
    <h2 class="text-primary mb-4"><i class="fas fa-plus-circle"></i> Thêm thể loại mới</h2>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none;"></div>

        <div class="form-group mb-4">
            <label asp-for="TenTheLoai" class="form-label fw-bold">Tên thể loại</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-tag"></i></span>
                <input asp-for="TenTheLoai" class="form-control form-control-lg" placeholder="Nhập tên thể loại (VD: Tiên Hiệp)..." />
            </div>
            <span asp-validation-for="TenTheLoai" class="text-danger small"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-save"></i> Lưu dữ liệu
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="fas fa-undo"></i> Quay lại
            </a>
        </div>
    </form>
</div>