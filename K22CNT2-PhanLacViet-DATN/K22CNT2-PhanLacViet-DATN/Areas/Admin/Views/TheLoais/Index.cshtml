@model IEnumerable<K22CNT2_PhanLacViet_DATN.Models.TheLoai>

@{
    ViewData["Title"] = "Quản lý Thể Loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid shadow-sm p-3 mb-5 bg-white rounded">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-gray-800"><i class="fas fa-tags text-primary"></i> Quản lý Thể Loại</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus"></i> Thêm mới thể loại
        </a>
    </div>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr class="text-center">
                <th style="width: 100px;">Mã số</th>
                <th>Tên thể loại</th>
                <th style="width: 150px;">Trạng thái</th>
                <th style="width: 200px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center fw-bold">#@item.MaTheLoai</td>
                    <td class="fw-bold text-dark">@item.TenTheLoai</td>
                    <td class="text-center">
                        @if (item.IsDeleted == true)
                        {
                            <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Đã xóa tạm</span>
                        }
                        else
                        {
                            <span class="badge bg-success"><i class="fas fa-check-circle"></i> Hoạt động</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.MaTheLoai" class="btn btn-sm btn-warning" title="Sửa">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.MaTheLoai" class="btn btn-sm btn-info text-white" title="Chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaTheLoai" class="btn btn-sm btn-danger" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>