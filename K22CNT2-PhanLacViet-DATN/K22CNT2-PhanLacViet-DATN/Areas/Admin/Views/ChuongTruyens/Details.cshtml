@model K22CNT2_PhanLacViet_DATN.Models.ChuongTruyen

@{
    ViewData["Title"] = "Chi tiết chương truyện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid shadow-sm p-3 mb-5 bg-white rounded">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <div>
            <h1 class="h3 text-gray-800 mb-0">
                <i class="fas fa-file-alt text-primary me-2"></i>Chi tiết chương
            </h1>
            <small class="text-muted">Truyện: <strong class="text-dark">@Model.MaTruyenNavigation?.TenTruyen</strong></small>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.MaChuongTruyen" class="btn btn-warning shadow-sm">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                <i class="fas fa-list"></i> Danh sách chương
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="mb-4">
                        <label class="text-xs font-weight-bold text-primary text-uppercase mb-1 d-block">Thứ tự chương</label>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <span class="badge bg-primary px-3">@Model.ThuTuChuong</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="text-xs font-weight-bold text-info text-uppercase mb-1 d-block">Tiêu đề chương</label>
                        <div class="h6 mb-0 font-weight-bold text-gray-800">
                            @(string.IsNullOrEmpty(Model.TieuDe) ? "(Không có tiêu đề)" : Model.TieuDe)
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="text-xs font-weight-bold text-success text-uppercase mb-1 d-block">Ngày đăng tải</label>
                        <div class="text-gray-800">
                            <i class="far fa-calendar-alt me-1"></i> @Model.NgayDang?.ToString("dd/MM/yyyy") <br />
                            <i class="far fa-clock me-1"></i> @Model.NgayDang?.ToString("HH:mm:ss")
                        </div>
                    </div>

                    <div class="mb-0">
                        <label class="text-xs font-weight-bold text-dark text-uppercase mb-1 d-block">ID Truyện gốc</label>
                        <div class="text-gray-800 small font-italic">
                            Mã định danh: #@Model.MaTruyen
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-light d-flex align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-book-reader me-2"></i>Nội dung hiển thị
                    </h6>
                </div>
                <div class="card-body reading-content shadow-inner bg-white border mx-3 my-3 rounded"
                     style="min-height: 400px; max-height: 600px; overflow-y: auto;">

                    @if (!string.IsNullOrEmpty(Model.NoiDung))
                    {
                        <div class="p-3">
                            @Html.Raw(Model.NoiDung)
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted mt-5 font-italic">
                            <i class="fas fa-ghost fa-3x mb-3 d-block"></i>
                            Chương này hiện chưa có nội dung.
                        </div>
                    }
                </div>
                <div class="card-footer text-center bg-transparent border-0 small text-muted italic">
                    --- Hết chương ---
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Style cho khung đọc truyện chuyên nghiệp hơn */
    .reading-content {
        line-height: 1.8;
        font-size: 1.1rem;
        font-family: 'Times New Roman', Times, serif; /* Font chữ phổ biến cho đọc truyện */
        color: #2c3e50;
    }

        .reading-content p {
            margin-bottom: 1.2rem;
        }
        /* Thanh cuộn tùy chỉnh */
        .reading-content::-webkit-scrollbar {
            width: 8px;
        }

        .reading-content::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .reading-content::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 10px;
        }

            .reading-content::-webkit-scrollbar-thumb:hover {
                background: #555;
            }
    /* Chữ in hoa tiêu đề nhỏ */
    .text-xs {
        font-size: .7rem;
    }
</style>