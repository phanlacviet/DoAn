@model K22CNT2_PhanLacViet_DATN.Models.ChuongTruyen

@{
    ViewData["Title"] = "Chỉnh sửa chương";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .toolbar {
        margin-bottom: 5px;
        border: 1px solid #ccc;
        padding: 5px;
        background: #f9f9f9;
        border-radius: 5px 5px 0 0;
    }

        .toolbar button {
            cursor: pointer;
            border: 1px solid #ddd;
            background: #fff;
            padding: 5px 10px;
            font-weight: bold;
            margin-right: 5px;
        }

    .editor {
        min-height: 400px;
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 0 0 5px 5px;
        background: #fff;
        overflow-y: auto;
        outline: none;
    }
</style>

<h1>Chỉnh sửa chương</h1>
<h4>@Model.MaTruyenNavigation?.TenTruyen</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaChuongTruyen" />
            <input type="hidden" asp-for="NgayDang" /> <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label class="control-label">Thuộc truyện</label>
                    <select asp-for="MaTruyen" class="form-control" asp-items="ViewBag.MaTruyen"></select>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="ThuTuChuong" class="control-label">Thứ tự (Số)</label>
                    <input asp-for="ThuTuChuong" class="form-control" />
                    <span asp-validation-for="ThuTuChuong" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TieuDe" class="control-label">Tiêu đề</label>
                <input asp-for="TieuDe" class="form-control" />
                <span asp-validation-for="TieuDe" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Nội dung chương</label>

                <div class="toolbar">
                    <button type="button" onclick="cmd('bold')">B</button>
                    <button type="button" onclick="cmd('italic')">I</button>
                    <button type="button" onclick="cmd('underline')">U</button>
                    <button type="button" onclick="cmd('insertUnorderedList')">• List</button>
                </div>

                <div class="editor" id="editorContent" contenteditable="true">
                    @Html.Raw(Model.NoiDung)
                </div>

                <input type="hidden" asp-for="NoiDung" id="hiddenNoiDung" />
                <span asp-validation-for="NoiDung" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" onclick="submitData()" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

<script>
    function cmd(command) {
        document.execCommand(command, false, null);
    }

    function submitData() {
        var content = document.getElementById('editorContent').innerHTML;
        document.getElementById('hiddenNoiDung').value = content;
    }
</script>