@model K22CNT2_PhanLacViet_DATN.Models.ThanhVien

@{
    ViewData["Title"] = "Chi tiết thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <img src="@Model.Avatar" class="rounded-circle border border-4 border-white mb-3 shadow" style="width: 120px; height: 120px; object-fit: cover;" alt="profile">
                    <h3 class="mb-0">@Model.TaiKhoan</h3>
                    <p class="mb-0 opacity-75">Thành viên từ @Model.NgayTao?.ToString("MMMM yyyy")</p>
                </div>
                <div class="card-body p-4">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted"><i class="fas fa-key me-2"></i>Mật khẩu</span>
                            <span class="fw-bold">********</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted"><i class="far fa-calendar-alt me-2"></i>Ngày gia nhập</span>
                            <span>@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-bottom-0">
                            <span class="text-muted"><i class="fas fa-shield-alt me-2"></i>Trạng thái</span>
                            @if (Model.IsDeleted == true)
                            {
                                <span class="badge rounded-pill bg-danger">Bị vô hiệu hóa</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-success">Đang hoạt động</span>
                            }
                        </li>
                    </ul>
                </div>
                <div class="card-footer bg-light d-flex justify-content-around py-3">
                    <a asp-action="Edit" asp-route-id="@Model.TaiKhoan" class="btn btn-warning px-4">
                        <i class="fas fa-edit me-1"></i> Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left me-1"></i> Trở về
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>