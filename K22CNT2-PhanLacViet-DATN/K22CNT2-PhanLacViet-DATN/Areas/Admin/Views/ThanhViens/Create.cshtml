@model K22CNT2_PhanLacViet_DATN.Models.ThanhVien

@{
    ViewData["Title"] = "Thêm thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-sm p-4 bg-white rounded" style="max-width: 500px;">
    <h2 class="text-center text-success mb-4"><i class="fas fa-user-plus"></i> Tạo tài khoản</h2>
    <hr />
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="TaiKhoan" class="form-label fw-bold">Tên tài khoản</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <input asp-for="TaiKhoan" class="form-control" placeholder="Nhập tên đăng nhập..." />
            </div>
            <span asp-validation-for="TaiKhoan" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MatKhau" class="form-label fw-bold">Mật khẩu</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
                <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
            </div>
            <span asp-validation-for="MatKhau" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Chọn ảnh đại diện</label>
            <input type="file" name="fAvatar" class="form-control" accept="image/*" />
            @if (!string.IsNullOrEmpty(Model?.Avatar))
            {
                <img src="@Model.Avatar" width="100" class="mt-2 rounded border" />
                <input type="hidden" asp-for="Avatar" />
            }
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Tạo tài khoản</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Quay lại danh sách</a>
        </div>
    </form>
</div>