@model K22CNT2_PhanLacViet_DATN.Models.ThanhVien

@{
    ViewData["Title"] = "Cập nhật thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-sm p-4 bg-white rounded" style="max-width: 600px;">
    <h2 class="text-warning mb-4 text-center"><i class="fas fa-user-edit"></i> Chỉnh sửa thành viên</h2>
    <hr />
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="TaiKhoan" />
        <input type="hidden" asp-for="NgayTao" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Tài khoản</label>
                <input class="form-control bg-light" value="@Model.TaiKhoan" disabled />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="MatKhau" class="form-label fw-bold">Mật khẩu mới</label>
                <input asp-for="MatKhau" class="form-control" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Chọn ảnh đại diện</label>
            <input type="file" name="fAvatar" class="form-control" accept="image/*" />
            @if (!string.IsNullOrEmpty(Model?.Avatar))
            {
                <img src="@Model.Avatar" width="100" class="mt-2 rounded border" />
                <input type="hidden" asp-for="Avatar" />
            }
        </div>

        <div class="mb-4 p-3 bg-light rounded">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox"
                       id="IsDeleted"
                       name="IsDeleted"
                       value="true"
                       @(Model.IsDeleted == true ? "checked" : "") />
                <input type="hidden" name="IsDeleted" value="false" />
                <label class="form-check-label fw-bold" for="IsDeleted">Khóa tài khoản này</label>
            </div>
            <small class="text-muted">Tài khoản bị khóa sẽ không thể đăng nhập.</small>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-warning px-4 fw-bold text-dark"><i class="fas fa-save"></i> Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary px-4">Hủy bỏ</a>
        </div>
    </form>
</div>