@model IEnumerable<K22CNT2_PhanLacViet_DATN.Models.ThanhVien>

@{
    ViewData["Title"] = "Quản lý thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid shadow-sm p-3 mb-5 bg-white rounded">
    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
        <h1 class="h3 text-gray-800"><i class="fas fa-users-cog text-primary"></i> Quản lý thành viên</h1>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-user-plus"></i> Thêm thành viên mới</a>
    </div>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th style="width: 60px;">Avatar</th>
                <th>Tài khoản</th>
                <th>Mật khẩu</th>
                <th>Ngày tạo</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Avatar))
                        {
                            <img src="@item.Avatar" class="rounded-circle shadow-sm" style="width: 45px; height: 45px; object-fit: cover;" alt="avatar" />
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 45px; height: 45px;">
                                <i class="fas fa-user"></i>
                            </div>
                        }
                    </td>
                    <td class="fw-bold text-dark">@item.TaiKhoan</td>
                    <td>
                        <code class="text-muted">********</code>
                    </td>
                    <td class="small">
                        <i class="far fa-calendar-alt text-muted"></i> @item.NgayTao?.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td class="text-center">
                        @if (item.IsDeleted == true)
                        {
                            <span class="badge bg-danger">Bị khóa</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                    </td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.TaiKhoan" class="btn btn-sm btn-outline-warning" title="Sửa"><i class="fas fa-user-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.TaiKhoan" class="btn btn-sm btn-outline-info" title="Xem"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.TaiKhoan" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fas fa-user-minus"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>