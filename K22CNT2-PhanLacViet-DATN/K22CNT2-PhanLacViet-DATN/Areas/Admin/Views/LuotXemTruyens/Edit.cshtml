@model K22CNT2_PhanLacViet_DATN.Models.LuotXemTruyen

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0 mx-auto" style="max-width: 500px;">
        <div class="card-header bg-warning py-3">
            <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-edit me-2"></i> Cập nhật lượt xem</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"></div>
                <input type="hidden" asp-for="MaLuotXem" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Truyện</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-book"></i></span>
                        <select asp-for="MaTruyen" class="form-select" asp-items="ViewBag.MaTruyen"></select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Ngày</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                        <input asp-for="Ngay" class="form-control" type="date" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Số lượt xem</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-eye text-success"></i></span>
                        <input asp-for="SoLuotXem" class="form-control" type="number" />
                    </div>
                </div>

                <div class="row g-2">
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">Hủy bỏ</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-warning w-100 fw-bold text-dark">Lưu thay đổi</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

