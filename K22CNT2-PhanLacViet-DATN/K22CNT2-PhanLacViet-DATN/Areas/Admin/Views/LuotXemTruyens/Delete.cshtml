@model K22CNT2_PhanLacViet_DATN.Models.LuotXemTruyen

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0 mx-auto" style="max-width: 500px;">
        <div class="card-header bg-danger text-white py-3">
            <h5 class="mb-0 fw-bold text-center"><i class="fas fa-trash-alt me-2"></i> Xác nhận xóa thống kê?</h5>
        </div>
        <div class="card-body p-4 text-center">
            <p class="text-muted">Dữ liệu lượt xem cho truyện sau sẽ bị xóa vĩnh viễn:</p>
            <h4 class="text-danger mb-2">@Model.MaTruyenNavigation?.TenTruyen</h4>
            <p class="mb-4 small">Ngày ghi nhận: <strong>@Model.Ngay?.ToString("dd/MM/yyyy")</strong></p>

            <form asp-action="Delete">
                <input type="hidden" asp-for="MaLuotXem" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg shadow-sm">Xóa ngay lập tức</button>
                    <a asp-action="Index" class="btn btn-light border">Hủy bỏ</a>
                </div>
            </form>
        </div>
    </div>
</div>
