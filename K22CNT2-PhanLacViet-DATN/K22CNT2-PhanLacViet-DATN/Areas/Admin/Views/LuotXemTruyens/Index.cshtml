@model IEnumerable<K22CNT2_PhanLacViet_DATN.Models.LuotXemTruyen>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i> Thống kê Lượt xem</h5>
            <a asp-action="Create" class="btn btn-primary btn-sm fw-bold"><i class="fas fa-plus"></i> Thêm mới</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3 text-center" style="width: 80px;">ID</th>
                        <th>Truyện</th>
                        <th>Ngày ghi nhận</th>
                        <th class="text-center">Số lượt xem</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">@item.MaLuotXem</td>
                            <td>
                                <span class="text-primary fw-bold"><i class="fas fa-book me-1"></i> @item.MaTruyenNavigation?.TenTruyen</span>
                            </td>
                            <td>@item.Ngay?.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <span class="badge bg-success rounded-pill px-3">@item.SoLuotXem</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.MaLuotXem" class="btn btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.MaLuotXem" class="btn btn-info text-white" title="Chi tiết"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.MaLuotXem" class="btn btn-danger" title="Xóa"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
