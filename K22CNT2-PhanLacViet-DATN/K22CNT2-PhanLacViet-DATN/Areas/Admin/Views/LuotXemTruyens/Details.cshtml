@model K22CNT2_PhanLacViet_DATN.Models.LuotXemTruyen

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0 mx-auto" style="max-width: 550px;">
        <div class="card-header bg-info text-white text-center py-3">
            <h5 class="mb-0 fw-bold"><i class="fas fa-info-circle me-2"></i> Chi tiết thông số lượt xem</h5>
        </div>
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <i class="fas fa-chart-pie fa-3x text-info opacity-50"></i>
            </div>
            <dl class="row">
                <dt class="col-sm-4 text-muted">Mã bản ghi:</dt>
                <dd class="col-sm-8 fw-bold">#@Model.MaLuotXem</dd>

                <dt class="col-sm-4 text-muted">Tên truyện:</dt>
                <dd class="col-sm-8 text-primary fw-bold">@Model.MaTruyenNavigation?.TenTruyen</dd>

                <dt class="col-sm-4 text-muted">Ngày ghi nhận:</dt>
                <dd class="col-sm-8">@Model.Ngay?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 text-muted">Số lượt xem:</dt>
                <dd class="col-sm-8"><span class="badge bg-success">@Model.SoLuotXem</span></dd>
            </dl>
            <hr />
            <div class="d-flex justify-content-center gap-2">
                <a asp-action="Edit" asp-route-id="@Model.MaLuotXem" class="btn btn-warning px-4 text-dark fw-bold">Sửa</a>
                <a asp-action="Index" class="btn btn-light border px-4">Quay lại</a>
            </div>
        </div>
    </div>
</div>
