@model K22CNT2_PhanLacViet_DATN.Models.DanhGium
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container py-4">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header bg-warning">
            <h4 class="mb-0"><i class="fas fa-edit"></i> Chỉnh sửa đánh giá</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="TaiKhoan" />
                <input type="hidden" asp-for="MaTruyen" />
                <input type="hidden" asp-for="NgayDanhGia" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Đối tượng:</label>
                    <p class="text-muted small">Tài khoản: <b>@Model.TaiKhoan</b> | Truyện: <b>@Model.MaTruyen</b></p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Điểm số mới</label>
                    <input asp-for="Diem" type="number" min="1" max="5" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Sửa nội dung</label>
                    <textarea asp-for="NoiDung" class="form-control" rows="4"></textarea>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
                    <button type="submit" class="btn btn-warning fw-bold">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>