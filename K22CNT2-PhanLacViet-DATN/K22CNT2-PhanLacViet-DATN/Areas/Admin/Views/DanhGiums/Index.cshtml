@model IEnumerable<K22CNT2_PhanLacViet_DATN.Models.DanhGium>

@{

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid bg-white p-4 shadow-sm rounded">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-star-half-alt"></i> Quản lý Đánh giá</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Thêm đánh giá</a>
    </div>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Tài khoản</th>
                <th>Truyện</th>
                <th class="text-center">Điểm</th>
                <th>Nội dung</th>
                <th>Ngày đánh giá</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><b class="text-info">@item.TaiKhoan</b></td>
                    <td>@item.MaTruyenNavigation?.TenTruyen</td>
                    <td class="text-center">
                        <span class="badge bg-warning text-dark">
                            @item.Diem <i class="fas fa-star"></i>
                        </span>
                    </td>
                    <td class="text-truncate" style="max-width: 200px;">@item.NoiDung</td>
                    <td>@item.NgayDanhGia?.ToString("dd/MM/yyyy HH:mm")</td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-taiKhoan="@item.TaiKhoan" asp-route-maTruyen="@item.MaTruyen" class="btn btn-sm btn-outline-warning"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-taiKhoan="@item.TaiKhoan" asp-route-maTruyen="@item.MaTruyen" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-taiKhoan="@item.TaiKhoan" asp-route-maTruyen="@item.MaTruyen" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>