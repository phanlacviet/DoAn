@model K22CNT2_PhanLacViet_DATN.Models.BinhLuan

@{
    ViewData["Title"] = "Sửa bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-sm p-4 bg-white rounded" style="max-width: 600px;">
    <h2 class="text-warning mb-4"><i class="fas fa-edit"></i> Chỉnh sửa bình luận</h2>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="MaBinhLuan" />
        <input type="hidden" asp-for="NgayGui" /> @* Giữ nguyên ngày gửi cũ *@

        <div class="mb-3">
            <label class="form-label fw-bold text-muted">Thông tin gốc</label>
            <div class="p-2 border rounded bg-light small">
                Tài khoản: <strong>@Model.TaiKhoan</strong> | Chương: <strong>#@Model.MaChuongTruyen</strong>
            </div>
            <input type="hidden" asp-for="TaiKhoan" />
            <input type="hidden" asp-for="MaChuongTruyen" />
        </div>

        <div class="mb-4">
            <label asp-for="NoiDung" class="form-label fw-bold">Nội dung thay đổi</label>
            <textarea asp-for="NoiDung" class="form-control" rows="5"></textarea>
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between border-top pt-3">
            <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
            <button type="submit" class="btn btn-warning fw-bold text-dark"><i class="fas fa-check"></i> Lưu thay đổi</button>
        </div>
    </form>
</div>