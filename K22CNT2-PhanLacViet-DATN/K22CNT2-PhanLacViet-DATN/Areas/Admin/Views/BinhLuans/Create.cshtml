@model K22CNT2_PhanLacViet_DATN.Models.BinhLuan

@{
    ViewData["Title"] = "Tạo bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-sm p-4 bg-white rounded" style="max-width: 600px;">
    <h2 class="text-primary mb-4"><i class="fas fa-plus-circle"></i> Thêm bình luận mới</h2>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label fw-bold">Chương truyện</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-book-open"></i></span>
                <select asp-for="MaChuongTruyen" class="form-select" asp-items="ViewBag.MaChuongTruyen"></select>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Tài khoản gửi</label>
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
                <select asp-for="TaiKhoan" class="form-select" asp-items="ViewBag.TaiKhoan"></select>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="NoiDung" class="form-label fw-bold">Nội dung bình luận</label>
            <textarea asp-for="NoiDung" class="form-control" rows="4" placeholder="Nhập nội dung..."></textarea>
            <span asp-validation-for="NoiDung" class="text-danger small"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Đăng bình luận</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
        </div>
    </form>
</div>