@model IEnumerable<K22CNT2_PhanLacViet_DATN.Models.BinhLuan>

@{
    ViewData["Title"] = "Quản lý bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid shadow-sm p-3 mb-5 bg-white rounded">
    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
        <h1 class="h3 text-gray-800"><i class="fas fa-comments text-primary"></i> Danh sách bình luận</h1>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Tạo bình luận mới</a>
    </div>

    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Người gửi</th>
                <th style="width: 35%;">Nội dung</th>
                <th>Chương truyện</th>
                <th>Thời gian</th>
                <th class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="badge bg-info text-dark">
                            <i class="fas fa-user"></i> @item.TaiKhoanNavigation?.TaiKhoan
                        </span>
                    </td>
                    <td class="text-break">@item.NoiDung</td>
                    <td>
                        <small class="text-muted">ID Chương: #@item.MaChuongTruyenNavigation?.MaChuongTruyen</small>
                    </td>
                    <td>
                        <small><i class="far fa-clock"></i> @item.NgayGui?.ToString("dd/MM/yyyy HH:mm")</small>
                    </td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.MaBinhLuan" class="btn btn-sm btn-outline-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.MaBinhLuan" class="btn btn-sm btn-outline-info" title="Chi tiết"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.MaBinhLuan" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>