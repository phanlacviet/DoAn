@model K22CNT2_PhanLacViet_DATN.Models.LuuTruyen

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0 mx-auto" style="max-width: 500px;">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i> Thêm lưu truyện</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Tài khoản</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <select asp-for="TaiKhoan" class="form-select" asp-items="ViewBag.TaiKhoan"></select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Truyện</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-book"></i></span>
                        <select asp-for="MaTruyen" class="form-select" asp-items="ViewBag.MaTruyen"></select>
                    </div>
                </div>

                <div class="row g-2 pt-2">
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">Hủy bỏ</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-success w-100">Lưu lại</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

