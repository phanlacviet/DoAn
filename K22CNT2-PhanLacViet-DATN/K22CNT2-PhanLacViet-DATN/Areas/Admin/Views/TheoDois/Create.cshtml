@model K22CNT2_PhanLacViet_DATN.Models.TheoDoi

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card border-0 shadow mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Thêm theo dõi mới</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small"></div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Tài khoản</label>
                    <select asp-for="TaiKhoan" class="form-select border-primary" asp-items="ViewBag.TaiKhoan"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Truyện</label>
                    <select asp-for="MaTruyen" class="form-select border-primary" asp-items="ViewBag.MaTruyen"></select>
                </div>
                <div class="d-grid gap-2 pt-2">
                    <button type="submit" class="btn btn-primary">Lưu dữ liệu</button>
                    <a asp-action="Index" class="btn btn-light border">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

