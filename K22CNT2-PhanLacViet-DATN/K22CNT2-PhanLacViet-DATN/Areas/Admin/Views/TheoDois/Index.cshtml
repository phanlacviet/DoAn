@model IEnumerable<K22CNT2_PhanLacViet_DATN.Models.TheoDoi>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary"><i class="fas fa-heart me-2"></i>Danh sách theo dõi</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm"><i class="fas fa-plus"></i> Thêm mới</a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Tài khoản</th>
                        <th>Truyện</th>
                        <th>Ngày theo dõi</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.TaiKhoan</td>
                            <td>@item.MaTruyenNavigation.TenTruyen</td>
                            <td>@(item.NgayTheoDoi?.ToString("dd/MM/yyyy HH:mm"))</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-taiKhoan="@item.TaiKhoan" asp-route-maTruyen="@item.MaTruyen" class="btn btn-outline-warning text-dark"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-taiKhoan="@item.TaiKhoan" asp-route-maTruyen="@item.MaTruyen" class="btn btn-outline-info"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Delete" asp-route-taiKhoan="@item.TaiKhoan" asp-route-maTruyen="@item.MaTruyen" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
