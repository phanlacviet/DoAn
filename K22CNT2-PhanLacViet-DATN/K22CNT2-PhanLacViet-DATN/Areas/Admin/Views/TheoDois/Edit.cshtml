@model K22CNT2_PhanLacViet_DATN.Models.TheoDoi

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card border-0 shadow mx-auto" style="max-width: 500px;">
        <div class="card-header bg-warning py-3">
            <h5 class="mb-0 fw-bold"><i class="fas fa-edit me-2"></i>Cập nhật theo dõi</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="TaiKhoan" />
                <input type="hidden" asp-for="MaTruyen" />

                <div class="mb-3 text-center border-bottom pb-2">
                    <span class="badge bg-info text-dark">@Model.TaiKhoan</span>
                    <i class="fas fa-arrow-right mx-2"></i>
                    <span class="badge bg-success">@Model.MaTruyenNavigation?.TenTruyen</span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Ngày theo dõi</label>
                    <input asp-for="NgayTheoDoi" class="form-control" type="datetime-local" />
                </div>

                <div class="d-grid gap-2 pt-2">
                    <button type="submit" class="btn btn-warning fw-bold">Lưu thay đổi</button>
                    <a asp-action="Index" class="btn btn-light border">Hủy bỏ</a>
                </div>
            </form>
        </div>
    </div>
</div>

