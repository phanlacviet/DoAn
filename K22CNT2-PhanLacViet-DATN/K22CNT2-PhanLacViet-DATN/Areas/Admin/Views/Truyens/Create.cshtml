@model K22CNT2_PhanLacViet_DATN.Models.Truyen

@{
    ViewData["Title"] = "Thêm mới truyện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var listTheLoai = ViewBag.TheLoai as List<K22CNT2_PhanLacViet_DATN.Models.TheLoai>;
}

<h1>Tạo mới truyện</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="TenTruyen" class="control-label">Tên truyện</label>
                <input asp-for="TenTruyen" class="form-control" />
                <span asp-validation-for="TenTruyen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TacGia" class="control-label">Tác giả</label>
                <input asp-for="TacGia" class="form-control" />
                <span asp-validation-for="TacGia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MoTa" class="control-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NguoiDang" class="control-label">Người đăng</label>
                <select asp-for="NguoiDang" class="form-control" asp-items="ViewBag.NguoiDang"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LoaiTruyen" class="control-label">Loại truyện</label>
                <select asp-for="LoaiTruyen" class="form-control">
                    <option value="AI dịch">AI dịch</option>
                    <option value="Sáng tác">Sáng tác</option>
                    <option value="Dịch">Dịch</option>
                </select>
                <span asp-validation-for="LoaiTruyen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Thể loại (Chọn nhiều)</label>
                <div class="card p-3 shadow-sm">
                    <div class="row">
                        @if (listTheLoai != null)
                        {
                            foreach (var item in listTheLoai)
                            {
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="selectedTheLoai" value="@item.MaTheLoai" id="tl_@item.MaTheLoai">
                                        <label class="form-check-label" for="tl_@item.MaTheLoai">@item.TenTheLoai</label>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Ảnh bìa</label>
                <input type="file" name="AnhBiaFile" class="form-control" accept="image/*" />
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>