@model K22CNT2_PhanLacViet_DATN.Models.Truyen

@{
    ViewData["Title"] = "Chỉnh sửa truyện";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var listTheLoai = ViewBag.TheLoai as List<K22CNT2_PhanLacViet_DATN.Models.TheLoai>;
    var selectedTheLoai = ViewBag.SelectedTheLoai as List<int>;
}

<h1>Chỉnh sửa</h1>
<h4>Truyện: @Model.TenTruyen</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaTruyen" />

            <div class="form-group mb-3">
                <label asp-for="TenTruyen" class="control-label">Tên truyện</label>
                <input asp-for="TenTruyen" class="form-control" />
                <span asp-validation-for="TenTruyen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TacGia" class="control-label">Tác giả</label>
                <input asp-for="TacGia" class="form-control" />
                <span asp-validation-for="TacGia" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MoTa" class="control-label">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NguoiDang" class="control-label">Người đăng</label>
                <select asp-for="NguoiDang" class="form-control" asp-items="ViewBag.NguoiDang"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LoaiTruyen" class="control-label">Loại truyện</label>
                <select asp-for="LoaiTruyen" class="form-control">
                    <option value="AI dịch">AI dịch</option>
                    <option value="Sáng tác">Sáng tác</option>
                    <option value="Dịch">Dịch</option>
                </select>
                <span asp-validation-for="LoaiTruyen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Thể loại (Chọn nhiều)</label>
                <div class="card p-3 shadow-sm">
                    <div class="row">
                        @if (listTheLoai != null)
                        {
                            foreach (var item in listTheLoai)
                            {
                                bool isChecked = selectedTheLoai != null && selectedTheLoai.Contains(item.MaTheLoai);
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="selectedTheLoai"
                                               value="@item.MaTheLoai" id="tl_@item.MaTheLoai" @(isChecked ? "checked" : "")>
                                        <label class="form-check-label" for="tl_@item.MaTheLoai">@item.TenTheLoai</label>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Ảnh bìa hiện tại</label>
                <div class="my-2">
                    @if (!string.IsNullOrEmpty(Model.AnhBia))
                    {
                        <img src="@Model.AnhBia" alt="Cover Image" style="height: 150px; border-radius: 5px; border: 1px solid #ddd;" />
                    }
                    else
                    {
                        <span class="text-muted small">Chưa có ảnh</span>
                    }
                </div>
                <label class="control-label">Thay đổi ảnh mới</label>
                <input type="file" name="AnhBiaFile" class="form-control" accept="image/*" />
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>