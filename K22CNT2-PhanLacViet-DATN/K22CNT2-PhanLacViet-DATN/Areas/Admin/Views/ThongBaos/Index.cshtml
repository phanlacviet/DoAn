@model IEnumerable<K22CNT2_PhanLacViet_DATN.Models.ThongBao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold"><i class="fas fa-bell me-2"></i> Danh sách thông báo</h5>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold text-info"><i class="fas fa-paper-plane"></i> Gửi thông báo</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">Người nhận</th>
                        <th>Nội dung</th>
                        <th class="text-center">Trạng thái</th>
                        <th>Ngày gửi</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-3 fw-bold text-dark">@item.TaiKhoan</td>
                            <td style="max-width: 300px;" class="text-truncate">@item.NoiDung</td>
                            <td class="text-center">
                                @if (item.DaDoc == true)
                                {
                                    <span class="badge bg-secondary opacity-75">Đã đọc</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark border border-warning shadow-sm">Chưa đọc</span>
                                }
                            </td>
                            <td class="small text-muted">@item.NgayGui?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm shadow-sm">
                                    <a asp-action="Edit" asp-route-id="@item.MaThongBao" class="btn btn-warning" title="Sửa"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.MaThongBao" class="btn btn-info text-white" title="Chi tiết"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.MaThongBao" class="btn btn-danger" title="Xóa"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
