@model K22CNT2_PhanLacViet_DATN.Models.ThongBao

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0 mx-auto" style="max-width: 500px;">
        <div class="card-header bg-danger text-white py-3">
            <h5 class="mb-0 fw-bold text-center"><i class="fas fa-trash-alt me-2"></i> Thu hồi thông báo?</h5>
        </div>
        <div class="card-body p-4 text-center">
            <div class="mb-4">
                <i class="fas fa-exclamation-circle fa-4x text-danger opacity-25"></i>
            </div>
            <p class="text-muted">Bạn có chắc chắn muốn xóa thông báo gửi cho tài khoản <strong>@Model.TaiKhoan</strong>?</p>
            <div class="alert alert-warning small text-start">
                <strong>Nội dung:</strong> @Model.NoiDung
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="MaThongBao" />
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger btn-lg shadow-sm">Xác nhận xóa vĩnh viễn</button>
                    <a asp-action="Index" class="btn btn-light border">Hủy, không xóa nữa</a>
                </div>
            </form>
        </div>
    </div>
</div>