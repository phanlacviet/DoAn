@model K22CNT2_PhanLacViet_DATN.Models.ThongBao

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0 mx-auto" style="max-width: 550px;">
        <div class="card-header bg-info text-white py-3">
            <h5 class="mb-0 fw-bold"><i class="fas fa-paper-plane me-2"></i> Gửi thông báo mới</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Chọn người nhận</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text"><i class="fas fa-user text-info"></i></span>
                        <select asp-for="TaiKhoan" class="form-select border-info" asp-items="ViewBag.TaiKhoan"></select>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Nội dung thông báo</label>
                    <textarea asp-for="NoiDung" class="form-control border-info shadow-sm" rows="4" placeholder="Nhập nội dung gửi tới người dùng..."></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger small"></span>
                </div>

                <div class="row g-2">
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">Hủy bỏ</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-info text-white w-100 fw-bold">Gửi ngay</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

