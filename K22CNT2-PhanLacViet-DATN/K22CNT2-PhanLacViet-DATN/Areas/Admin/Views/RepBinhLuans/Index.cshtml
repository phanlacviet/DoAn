@model IEnumerable<K22CNT2_PhanLacViet_DATN.Models.RepBinhLuan>

@{
    ViewData["Title"] = "Quản lý phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid shadow-sm p-3 mb-5 bg-white rounded">
    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
        <h1 class="h3 text-gray-800"><i class="fas fa-reply-all text-success"></i> Quản lý phản hồi bình luận</h1>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus"></i> Tạo phản hồi mới
        </a>
    </div>

    <table class="table table-hover align-middle border">
        <thead class="table-light">
            <tr>
                <th style="width: 15%">Người phản hồi</th>
                <th style="width: 35%">Nội dung phản hồi</th>
                <th style="width: 15%">Bình luận gốc</th>
                <th style="width: 15%">Thời gian</th>
                <th class="text-center" style="width: 20%">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <span class="badge bg-secondary">
                            <i class="fas fa-user-circle"></i> @item.TaiKhoanNavigation?.TaiKhoan
                        </span>
                    </td>
                    <td class="text-wrap">@item.NoiDung</td>
                    <td>
                        <span class="text-primary fw-bold">#@item.MaBinhLuanNavigation?.MaBinhLuan</span>
                    </td>
                    <td class="small text-muted">
                        <i class="far fa-clock"></i> @item.NgayGui?.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td class="text-center">
                        <div class="btn-group shadow-sm">
                            <a asp-action="Edit" asp-route-id="@item.MaRep" class="btn btn-sm btn-warning" title="Sửa"><i class="fas fa-edit text-dark"></i></a>
                            <a asp-action="Details" asp-route-id="@item.MaRep" class="btn btn-sm btn-info text-white" title="Chi tiết"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.MaRep" class="btn btn-sm btn-danger" title="Xóa"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>