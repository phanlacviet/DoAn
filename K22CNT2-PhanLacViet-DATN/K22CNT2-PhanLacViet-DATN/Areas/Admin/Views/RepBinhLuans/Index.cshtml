                <a asp-action="Edit" asp-route-id="@item.MaRep">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaRep">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaRep">Delete</a>
