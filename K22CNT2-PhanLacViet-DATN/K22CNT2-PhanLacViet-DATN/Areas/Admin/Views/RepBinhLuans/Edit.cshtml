@model K22CNT2_PhanLacViet_DATN.Models.RepBinhLuan

@{
    ViewData["Title"] = "Sửa phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-sm p-4 bg-white rounded" style="max-width: 600px;">
    <h2 class="text-warning text-center mb-4"><i class="fas fa-tools"></i> Cập nhật phản hồi</h2>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="MaRep" />
        <input type="hidden" asp-for="NgayGui" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Mã bình luận gốc</label>
                <select asp-for="MaBinhLuan" class="form-control" asp-items="ViewBag.MaBinhLuan"></select>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Người phản hồi</label>
                <select asp-for="TaiKhoan" class="form-control" asp-items="ViewBag.TaiKhoan"></select>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="NoiDung" class="form-label fw-bold">Sửa nội dung</label>
            <textarea asp-for="NoiDung" class="form-control" rows="5"></textarea>
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary px-4"><i class="fas fa-chevron-left"></i> Quay lại</a>
            <button type="submit" class="btn btn-warning px-4 fw-bold">Lưu thay đổi</button>
        </div>
    </form>
</div>